<p id="notice"><%= notice %></p>

<div class="container ">
    <div class="row">
        <div class="col-sm-6 col-md-offset-1 col-md-4 showPost">

          <p>
            <strong>Name:</strong>
            <%= @product.name %>
          </p>

          <p>
            <strong>Number:</strong>
            <%= @product.number %>
          </p>

          <p>
            <strong>Price: $</strong>
            <%= @product.price %>
            + Tax + Freight
          </p>

          <p>
            <strong>Picture:</strong> <br>
            <img src="<%= @product.picture.url %>" class="img-responsive" />
          </p>

          <p>
            <strong>Description:</strong>
            <%= @product.description %>
          </p>
          <%= link_to 'Edit', edit_product_path(@product) %> |
          <%= link_to 'Back', products_path %>
        </div>
    </div>
</div>          

